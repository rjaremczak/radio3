<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.cell.*?>

<VBox minHeight="400.0" minWidth="600.0" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mindpart.radio3.ui.MainController">
    <children>
        <ToolBar minHeight="40.0" minWidth="300.0" prefHeight="40.0" prefWidth="300.0">
            <items>
                <Button fx:id="deviceSelectionRefresh" mnemonicParsing="false" onAction="#refreshAvailablePorts" text="Refresh" />
                <ChoiceBox fx:id="deviceSelection" minWidth="212.0" prefHeight="27.0" prefWidth="212.0" />
                <Button fx:id="deviceConnect" mnemonicParsing="false" onAction="#doConnectDisconnect" text="Connect" />
                <Label fx:id="deviceStatus" text="Label" />
            </items>
        </ToolBar>
        <SplitPane dividerPositions="0.7" prefHeight="532.0" prefWidth="900.0" VBox.vgrow="SOMETIMES">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0" />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <TitledPane animated="false" prefHeight="411.0" prefWidth="268.0" text="Device Info">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <children>
                                    <Button fx:id="deviceInfoRefresh" mnemonicParsing="false" onAction="#doDeviceInfoRefresh" text="Refresh">
                                       <VBox.margin>
                                          <Insets bottom="10.0" />
                                       </VBox.margin>
                                    </Button>
                                    <TableView fx:id="devicePropertiesTable">
                                      <columns>
                                        <TableColumn editable="false" prefWidth="75.0" text="Property">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="name" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn editable="false" sortable="false" text="Value">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="value" />
                                            </cellValueFactory>
                                        </TableColumn>
                                      </columns>
                                       <columnResizePolicy>
                                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                       </columnResizePolicy>
                                    </TableView>
                                 </children>
                              </VBox>
                           </children>
                        </AnchorPane>
                    </content>
                  </TitledPane>
               </children>
            </VBox>
            </items>
        </SplitPane>
    </children>
    <stylesheets>
        <URL value="@main.css" />
    </stylesheets>
</VBox>
